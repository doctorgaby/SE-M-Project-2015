<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Speed, .Brake, .FuelConsumption">

    <TextView
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displaySpeed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayFuelConsumption"
        android:text="FuelConsumption"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/displayBrake"
        android:layout_alignStart="@+id/displayBrake" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayBrake"
        android:text="Braking?"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/displaySpeed"
        android:layout_alignStart="@+id/displaySpeed" />

    <TextView
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelSpeed"
        android:layout_above="@+id/displayBrake"
        android:layout_toStartOf="@+id/displaySpeed"
        android:layout_marginEnd="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelBreak"
        android:text="Braking?"
        android:layout_alignTop="@+id/displayBrake"
        android:layout_alignEnd="@+id/labelSpeed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelFuelConsumption"
        android:text="FuelConsumption"
        android:layout_alignTop="@+id/displayFuelConsumption"
        android:layout_alignEnd="@+id/labelBreak" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graph"
        android:id="@+id/graphBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
