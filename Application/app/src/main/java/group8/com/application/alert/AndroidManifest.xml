<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nicholas.alert" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SpeedActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BrakesActivity"
            android:label="@string/title_activity_brakes" >
        </activity>
        <activity
            android:name=".DistractionActivity"
            android:label="@string/title_activity_distraction" >
        </activity>
        <activity
            android:name=".FuelActivity"
            android:label="@string/title_activity_fuel" >
        </activity>
    </application>

</manifest>
